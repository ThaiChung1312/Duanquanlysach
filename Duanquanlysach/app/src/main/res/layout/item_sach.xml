<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:layout_margin="5dp"
    app:cardBackgroundColor="#FFCDD2"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/car1"
        android:layout_width="220dp"
        android:layout_height="220dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:background="#EF9A9A"
            android:layout_width="match_parent"
            android:layout_height="220dp">

            <TextView
                android:layout_marginTop="9dp"
                android:background="#FFCDD2"
                android:textColor="@android:color/holo_red_dark"
                android:id="@+id/tv_chiso"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:gravity="left|center_vertical"
                android:text="1"
                android:textSize="36dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@+id/tv_chiso"
                android:gravity="center_horizontal"
                android:text="tên sách" />

            <TextView
                android:id="@+id/tv_tenchange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:layout_toRightOf="@+id/tv_chiso"
                android:gravity="center_horizontal"
                android:text="Lập trình android"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_marginLeft="30dp"
                android:id="@+id/sl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:layout_toRightOf="@+id/tv_chiso"
                android:gravity="center_horizontal"
                android:text="số lượng:" />

            <TextView
                android:id="@+id/tv_slchange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="75dp"
                android:layout_toRightOf="@+id/sl"
                android:gravity="center_horizontal"
                android:text="100"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:layout_toRightOf="@+id/tv_slchange"
                android:gravity="center_horizontal"
                android:text="quyển" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView

        android:layout_width="110dp"
        android:layout_height="220dp"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/car1"
        app:cardBackgroundColor="#E57373"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp">

            <ImageView

                android:id="@+id/img_book1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/ic_theloaisach" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_tensach1"
                android:layout_margin="2dp"
                android:text="mã sách:" />

            <TextView
                android:id="@+id/tv_masach1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_tensach1"
                android:layout_margin="2dp"
                android:layout_toRightOf="@+id/tv_title"
                android:text="MS001" />

            <TextView
                android:id="@+id/tv_title_sl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title"
                android:layout_margin="2dp"
                android:text="số lượng:" />

            <TextView
                android:id="@+id/tv_soluong1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_masach1"
                android:layout_margin="2dp"
                android:layout_toRightOf="@+id/tv_title"
                android:text="100" />

            <TextView
                android:id="@+id/tv_title_gia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title_sl"
                android:layout_margin="2dp"
                android:text="Gía bìa:" />

            <TextView
                android:id="@+id/tv_giabia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_soluong1"
                android:layout_margin="2dp"
                android:layout_toRightOf="@+id/tv_title_gia"
                android:text="120000" />

            <TextView
                android:id="@+id/tv_tensach1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_book1"
                android:layout_margin="4dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:text="lập trình java 1"
                android:textSize="13sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
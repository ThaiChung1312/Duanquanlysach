<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_height="match_parent">
<TextView
    android:textSize="32dp"
    android:textStyle="bold"
    android:gravity="center"
    android:id="@+id/tv_title"
    android:text="Thêm Sách"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>
  <com.google.android.material.textfield.TextInputLayout
      android:layout_width="match_parent"
      app:counterMaxLength="32"
      app:counterEnabled="true"
      android:layout_height="wrap_content">
      <com.google.android.material.textfield.TextInputEditText
          android:layout_width="match_parent"
          android:id="@+id/tv_add_masach"
          android:maxLength="32"
          android:hint="Nhập mã sách"
          android:layout_height="wrap_content"/>
  </com.google.android.material.textfield.TextInputLayout>

        <Spinner
            android:layout_marginTop="8dp"
            android:id="@+id/spinner1"
            android:autofillHints="Mời chọn thể loại"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        app:counterMaxLength="32"
        app:counterEnabled="true"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:id="@+id/tv_add_tensach"
            android:maxLength="32"
            android:hint="Nhập tên sách"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        app:counterMaxLength="32"
        app:counterEnabled="true"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:maxLength="32"
            android:id="@+id/tv_add_nxb"
            android:hint="Nhập NXB"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        app:counterMaxLength="10"
        app:counterEnabled="true"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:maxLength="10"
            android:inputType="number"
            android:id="@+id/tv_add_soluong"
            android:hint="Nhập số lượng"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        app:counterMaxLength="15"
        app:counterEnabled="true"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:id="@+id/tv_add_giabia"
            android:maxLength="15"
            android:inputType="number"
            android:hint="Nhập giá bìa"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>
    <LinearLayout

        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_margin="8dp"
            android:text="Thêm"
            android:background="@drawable/border"
            android:id="@+id/btn_add_sach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:background="@drawable/border"
            android:layout_margin="8dp"
            android:text="Hủy"
            android:id="@+id/btn_huy_add_sach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
     app:cardCornerRadius="12dp"
        app:cardBackgroundColor="@android:color/white"
            android:layout_width="match_parent"
        android:layout_height="wrap_content" >
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="110dp">
<ImageView
    android:layout_margin="8dp"
    android:id="@+id/img_theloaisach"
    android:layout_width="50dp"
    android:src="@drawable/ic_theloaisach"
    android:layout_height="110dp"/>
    <LinearLayout
        android:layout_toRightOf="@+id/img_theloaisach"
        android:id="@+id/layout_theloaisach"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:textColor="@android:color/black"
        android:layout_margin="8dp"
        android:text="Mã thể loại:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="@android:color/black"
        android:layout_margin="8dp"
        android:id="@+id/tv_matheloai"
        android:text="Mã thể loại"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout><LinearLayout
        android:orientation="horizontal"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@android:color/black"
            android:layout_margin="8dp"

            android:text="Tên thể loại:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="@android:color/black"
            android:layout_margin="8dp"
            android:id="@+id/tv_tentheloai"

            android:text="Tên thể loại"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
       <LinearLayout
           android:layout_margin="8dp"
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:textColor="@android:color/black"
               android:text="Vị trí:"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
           <TextView
               android:id="@+id/tv_vitri"
               android:textColor="@android:color/black"
               android:text="A"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
       </LinearLayout>
    </LinearLayout>

</RelativeLayout>
        <ImageView
            android:layout_gravity="right"
            android:id="@+id/img_update_theloai"
            android:src="@drawable/ic_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_gravity="right|center"
            android:id="@+id/img_delete_theloai"
            android:src="@drawable/ic_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>
</LinearLayout>
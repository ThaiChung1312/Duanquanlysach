<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:layout_margin="8dp"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.MenuActivity"
    tools:showIn="@layout/app_bar_menu">
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:src="@drawable/logonhasach"
        android:layout_width="200dp"
        android:layout_height="150dp"/>
    <LinearLayout
        android:padding="8dp"
        android:layout_margin="8dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:textSize="14dp"
            android:text="nhà sách Phương Nam"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <TextView
            android:text="địa chỉ:15 Đông Quan-Cầu Giấy-Hà Nội"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="SĐT:036.353.3737"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>
<LinearLayout
    android:padding="8dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="18dp"
        android:textStyle="bold"
        android:text="Lời nói đầu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="     Nhà sách Phương Nam được thành lập năm 1897 do nhà nho Nguyễn Văn Tú sáng lập nên
.Xuất thân từ gia đình nho giáo ông đã được tiếp cận đến sách từ lúc còn rất nhỏ.Ông đã
cùng bạn bè lập ra một tổ chức dậy chữ cho người nghèo và mở một thư viện sách miễn phí lúc bấy giờ.
Sau này khi sách là đồ thiết yếu gối đầu cho mọi người ông đã mở thêm nhiều hiệu sách ở nhiều
nơi để mang cái chữ đến cho mọi người.Nhà sách lấy phương châm chắp cánh cùng ước mơ để
mọi người được học,học nữa,học mãi."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="     Nhà sách hiện có rất nhiều loại sách đủ mọi lĩnh vực như văn hóa,đời sống,
lịch sử chính trị hay sách ngoại ngữ,công nghệ thông tin đầy đủ kiến thức cho mọi người tìm đọc hiểu."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>

</LinearLayout>